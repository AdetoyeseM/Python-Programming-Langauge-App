<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@drawable/side_nav_bar"
            android:elevation="4dp"
            app:title="@string/app_name"
            app:layout_collapseMode="pin"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/Theme.AppCompat.Light"
            >
        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ViewFlipper
                    android:id="@+id/vFlip"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="2dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:background="@color/colorBlueJeans"
                        android:clickable="true"
                        android:onClick="tutorial"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/ic_computer_black_24dp"
                            android:tint="@color/colorhite"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorBlueJeansDark"
                            android:padding="8dp"
                            android:text="Python Tutorial"
                            android:textAlignment="center"
                            android:textColor="@color/colorhite"
                            android:textSize="10sp"
                            android:textStyle="bold"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:background="@color/colorAqua"
                        android:clickable="true"
                        android:onClick="Programs"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/ic_code_black_24dp"
                            android:tint="@color/colorhite" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorAquaDark"
                            android:padding="8dp"
                            android:text="Python Programs"
                            android:textAlignment="center"
                            android:textColor="@color/colorhite"
                            android:textSize="10sp"
                            android:textStyle="bold"

                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:background="@color/colorMint"
                        android:clickable="true"
                        android:onClick="Quiz"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/ic_school_black_24dp"
                            android:tint="@color/colorhite" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorMintDark"
                            android:padding="8dp"
                            android:text="Quiz"
                            android:textAlignment="center"
                            android:textColor="@color/colorhite"
                            android:textSize="10sp"
                            android:textStyle="bold"

                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/colorGrass"
                        android:clickable="true"
                        android:onClick="Submit"
                        android:orientation="vertical"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/ic_assignment_black_24dp"
                            android:tint="@color/colorhite" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20sp"
                            android:background="@color/colorGrassDark"
                            android:padding="8dp"
                            android:text="Submit Assignment "
                            android:textAlignment="center"
                            android:textColor="@color/colorhite"
                            android:textSize="8sp"
                            android:textStyle="bold"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:background="@drawable/side_nav_bar"
                        android:clickable="true"
                        android:onClick="About"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/ic_people_outline_black_24dp"
                            android:tint="@color/colorhite" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorAquaDark"
                            android:padding="8dp"
                            android:text="About Us"
                            android:textAlignment="center"
                            android:textColor="@color/colorhite"
                            android:textSize="10sp"
                            android:textStyle="bold"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:background="@color/colorBlueJeans"
                        android:clickable="true"
                        android:onClick="Help"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/ic_help_outline_black_24dp"
                            android:tint="@color/colorhite" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorBlueJeansDark"
                            android:padding="8dp"
                            android:text="@string/help_ap_feedback"
                            android:textAlignment="center"
                            android:textColor="@color/colorhite"
                            android:textSize="10sp"
                            android:textStyle="bold"

                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_margin="2dp"
                        android:layout_weight="3"
                        android:background="@color/colorFlower"
                        android:clickable="true"
                        android:onClick="IDE"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/ic_developer_mode_black_24dp"
                            android:tint="@color/colorhite" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:background="@color/colorFlowerDark"
                            android:padding="5dp"
                            android:text="Integrated development Environment"
                            android:textAlignment="center"
                            android:textColor="@color/colorhite"
                            android:textSize="10sp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
